{
  "manifest_version": 3,
  "name": "Hotstar Dark Theme",
  "version": "0.3.0",
  "description": "Dark Theme for Hotstar",
  "icons": {
    "128": "media/icon.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_title": "Hotstar Dark Theme",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.hotstar.com/*"
      ],
      "run_at": "document_end",
      "css": [
        "content-script.css"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}