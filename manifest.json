{
  "manifest_version": 2,
  "name": "Hotstar Dark Mode",
  "version": "0.1.0",
  "description": "Dark Mode for Hotstar",
  "icons": {
    "128": "media/icon.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Hotstar"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.hotstar.com/*"
      ],
      "run_at": "document_end",
      "css": [
        "content-script.css"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}